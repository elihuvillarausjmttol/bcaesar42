<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Result"
    android:background="#252525">

    <TextView
        android:id="@+id/outputBox"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="&quot;calculating&quot;"
        android:textColor="@android:color/white"
        android:textSize="55sp" />

    <TextView
        android:id="@+id/youMadeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/outputBox"
        android:layout_centerHorizontal="true"
        android:text="You made"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/goodPartsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/outputBox"
        android:layout_centerHorizontal="true"
        android:text="good parts"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="50sp"/>

    <Button
        android:id="@+id/mainMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="Main Menu"
        android:textSize="30sp"/>
</RelativeLayout>